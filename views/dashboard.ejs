<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ"
        crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn"
        crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dashboard</title>
</head>

<!-- DELETE USER MODAL -->
<div class="modal fade" id="deleteUser" tabindex="-1" role="dialog" aria-labelledby="deleteUser" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Warning, Danger Ahead!</h5>
            </div>
            <div class="modal-body">
                <h6>Are you sure that you want to delete this user? This cannot be undone</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <form id="deleteform" method="post">
                    <button type="submit" class="btn btn-danger">Delete User</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- CLOSE ROOM MODAL -->
<div class="modal fade" id="closeRoom" tabindex="-1" role="dialog" aria-labelledby="closeRoom" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Warning, Danger Ahead!</h5>
            </div>
            <div class="modal-body">
                <h6>Are you sure you want to close this room?</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">Close Room</button>
            </div>
        </div>
    </div>
</div>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <p> Logged in as
                    <%=user.email%>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <h3>Welcome to the LearnUp Dashboard!</h3>
            </div>
            <form class="col-md-2" method="get" action="/logout">
                <button type="submit" name="logout" class="btn btn-primary">Logout</button>
            </form>
        </div>
        <% if (message.length > 0) { %>
            <p class="error-message">
                ***
                <%= message %>
            </p>
            <% } %>
                <div class="row gen-room">
                    <div class="col-md-2"></div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="form-group col-md-4">
                                <button type="button" name="" id="genRoomButton" class="btn btn-block btn-primary">Generate Room</button>
                            </div>
                            <div class="form-group col-md-4 close-room" id="close-room-div">
                                <button type="button" name="" class="btn btn-block btn-warning">Close Room</button>
                            </div>
                            <div class="col-md-2"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="" placeholder="">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <button type="button" name="" id="enterRoom" class="btn btn-primary disabled">Enter Room</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2"></div>
                </div>
                <% if (user.admin > 8) { %>
                    <div class="section">
                        <h4>User Settings</h4>
                        <table class="table table-striped table-hover align-middle col-md-12">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Admin Level</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (var i in users) { %>
                                    <tr>
                                        <td scope="row actionsrow">
                                            <%= users[i].email %>
                                        </td>
                                        <td>

                                            <% if (users[i].admin === 10) {%>
                                                Super Admin
                                                <% } else if (users[i].admin === 9) {%>
                                                    Admin
                                                    <% } else {%>
                                                        Teacher
                                                        <% } %>

                                        </td>
                                        <td div>
                                            <div class="row">
                                                <div class="col-md-3 action">
                                                    <% if (user.admin >= 9) { %>
                                                        <button type="button" name="" class="btn btn-warning actions" data-toggle="modal" data-target="#closeRoom">Close Room</button>
                                                        <% } %>
                                                </div>
                                                <div class="col-md-3 action">

                                                    <% if (user.admin > users[i].admin && user.email != users[i].email ) { %>
                                                        <button type="button" name="deleteuser" id="<%=users[i].id%>" class="btn btn-danger actions deleteuser" data-toggle="modal"
                                                            data-target="#deleteUser">Delete User</button>
                                                        <% } %>
                                                </div>
                                                <div class="col-md-3 action">
                                                    <% if (user.admin > users [i].admin && user.email != users[i].email && users [i].admin < 9) { %>
                                                        <form method="post" action='/promote/<%=users[i].id %>'>
                                                            <button type="submit" name="promoteuser" class="btn btn-success actions">Promote User</button>
                                                        </form>
                                                        <% } %>
                                                </div>
                                                <div class="col-md-3 action">
                                                    <% if (user.admin > users[i].admin && user.email != users[i].email && users[i].admin > 8) { %>
                                                        <form form method="post" action='/demote/<%=users[i].id %>'>
                                                            <button type="submit" name="demoteuser" class="btn btn-primary actions">Demote User</button>
                                                        </form>
                                                        <% } %>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                    <div class="section">
                        <h4>Create / Edit User Accounts</h4>
                        <div class="row management">
                            <div class="col-md-1"></div>
                            <form class="col-md-5 admin-tools" method='post' action="/new">
                                <h5>Register New User</h5>
                                <div class="form-group">
                                    <label for="newuseremail">Email</label>
                                    <input type="text" class="form-control" name="newuseremail" placeholder="Enter email">
                                </div>
                                <div class="form-group">
                                    <label for="newuseradmin">Admin Level</label>
                                    <select class="form-control" name="newuseradmin">
                                        <option>Teacher</option>
                                        <option>Admin</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <button type="submit" name="" class="btn btn-primary pull-right">Add User</button>
                                </div>
                            </form>

                            <form class="col-md-5 admin-tools" method="post" action="/edit">
                                <h5>Edit Existing User</h5>
                                <div class="form-group">
                                    <label for="edituseremail">Email</label>
                                    <input type="text" class="form-control" name="edituseremail" placeholder="Enter user email">
                                </div>
                                <div class="form-group">
                                    <label for="edituseradmin">Admin Level</label>
                                    <select class="form-control" name="edituseradmin">
                                        <option>Teacher</option>
                                        <option>Admin</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input type="password" class="form-control" name="edituserpassword" placeholder="Enter new password">
                                </div>
                                <div class="form-group">
                                    <label for="confirmpw">Confirm PW</label>
                                    <input type="password" class="form-control" name="edituserconfirmpw" placeholder="Confirm new password">
                                </div>
                                <div class="form-group">
                                    <button type="submit" name="" class="btn btn-primary pull-right">Edit User</button>
                                </div>
                            </form>
                            <div class="col-md-1"></div>
                        </div>
                    </div>
                    <% } %>
    </div>
</body>

<script type="text/javascript">
    document.getElementById('genRoomButton').addEventListener('click', closeRoom)
    document.getElementById('close-room-div').addEventListener('click', resetRoom)
    var deleteButtons = document.querySelectorAll('.deleteuser');

    for (var i = 0; i < deleteButtons.length; i++) {
        deleteButtons[i].addEventListener('click', deleteClicked)
    }

    function closeRoom() {
        document.getElementById('genRoomButton').innerHTML = "New Room"
        document.getElementById('close-room-div').style.display = "inline"
        document.getElementById('enterRoom').classList.remove("disabled")
    }

    function resetRoom() {
        document.getElementById('close-room-div').style.display = "none"
        document.getElementById('genRoomButton').innerHTML = "Generate Room"
        document.getElementById('enterRoom').classList.add("disabled")
    }

    function deleteClicked() {
        document.getElementById('deleteform').setAttribute("action", "/delete/" + this.id)
    }

</script>

</html>